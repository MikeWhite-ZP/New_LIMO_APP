# Server Configuration
NODE_ENV=development
PORT=5000

# CORS - Frontend domains allowed to access this backend
# Comma-separated list of origins (production only)
ALLOWED_ORIGINS=https://www.best-chauffeurs.com,https://best-chauffeurs.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/usa_luxury_limo

# Session
SESSION_SECRET=your-secret-key-change-in-production

# Replit Auth (OIDC)
ISSUER_URL=https://replit.com/...
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret

# Object Storage (MinIO/S3)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=usa-luxury-limo

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email (Nodemailer)
EMAIL_FROM=noreply@usa-luxury-limo.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Providers
STRIPE_SECRET_KEY=sk_test_...
VITE_STRIPE_PUBLIC_KEY=pk_test_...

# TomTom (Geocoding)
TOMTOM_API_KEY=your-tomtom-api-key

# AeroDataBox (Flight Search)
AERODATABOX_API_KEY=your-aerodatabox-api-key

# Admin Panel Access Control
# Comma-separated list of hostnames that can access admin routes
ADMIN_PANEL_HOSTS=localhost,adminaccess.best-chauffeurs.com

# Database URL Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
